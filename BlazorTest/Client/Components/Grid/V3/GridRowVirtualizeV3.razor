@typeparam T
@inherits CustomBaseComponent
<tr class="element-grid-row  @((IsSelected) ? "selected-element" : "")"
    style="height: 25px;"
    @key="@Element.GetHashCode()"
    @onclick="@((args) => SelectElement(Element, args))"
    @ondblclick="@((args) => SelectAndValideElement(Element, args))"
    @oncontextmenu="@((args) => RightClickElement(Element, args))">
    @foreach (var c in this.Parent.InternalColumns.OrderBy(c => c.Index))
    {
    <td scope="col">
        @(c.Body(Element))

    </td>
    }
</tr>