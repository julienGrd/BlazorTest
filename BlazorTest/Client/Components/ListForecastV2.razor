@using BlazorTest.Client.Components.Grid.V2
    <GridV2 Items="@Items" @ref="Grid">
        <Columns>
            <GridColumnV2 Parent="Grid" Header="Date" Index="1" T="@(BlazorTest.Shared.WeatherForecast)" CanOrder="true" OrderingExpression="Date">
                <Body Context="forecast">
                    @forecast.Date.ToShortDateString()
                </Body>
            </GridColumnV2>
            <GridColumnV2  Parent="Grid" Header="Temp. (C)" Index="2" T="@(BlazorTest.Shared.WeatherForecast)" CanOrder="true" OrderingExpression="TemperatureC">
                <Body Context="forecast">
                    @forecast.TemperatureC
                </Body>
            </GridColumnV2>
            <GridColumnV2 Parent="Grid" Header="Temp. (F)" Index="3" T="@(BlazorTest.Shared.WeatherForecast)" CanOrder="true" OrderingExpression="TemperatureF">
                <Body Context="forecast">
                    @forecast.TemperatureF
                </Body>
            </GridColumnV2>
            <GridColumnV2 Parent="Grid" Header="Summary" Index="4" T="@(BlazorTest.Shared.WeatherForecast)" CanOrder="true" OrderingExpression="Summary">
                <Body Context="forecast">
                    @forecast.Summary
                </Body>
            </GridColumnV2>
            <GridColumnV2 Parent="Grid" Header="City" Index="5" T="@(BlazorTest.Shared.WeatherForecast)" CanOrder="true" OrderingExpression="City.Name">
                <Body Context="forecast">
                    @forecast.City.Name
                </Body>
            </GridColumnV2>

        </Columns>
    </GridV2>