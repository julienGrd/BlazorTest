@using BlazorTest.Client.Components.Grid.V4
    <GridVirtualizeV4 Items="@Items" @ref="Grid" ItemHeight="25">
        <Columns>
            <GridColumnVirtualizeV4 Header="Date" Index="1" T="@(BlazorTest.Shared.WeatherForecast)" CanOrder="true" OrderingExpression="Date">
                <Body Context="forecast">
                    @forecast.Date.ToShortDateString()
                </Body>
            </GridColumnVirtualizeV4>
            <GridColumnVirtualizeV4  Header="Temp. (C)" Index="2" T="@(BlazorTest.Shared.WeatherForecast)" CanOrder="true" OrderingExpression="TemperatureC">
                <Body Context="forecast">
                    @forecast.TemperatureC
                </Body>
            </GridColumnVirtualizeV4>
            <GridColumnVirtualizeV4  Header="Temp. (F)" Index="3" T="@(BlazorTest.Shared.WeatherForecast)" CanOrder="true" OrderingExpression="TemperatureF">
                <Body Context="forecast">
                    @forecast.TemperatureF
                </Body>
            </GridColumnVirtualizeV4>
            <GridColumnVirtualizeV4  Header="Summary" Index="4" T="@(BlazorTest.Shared.WeatherForecast)" CanOrder="true" OrderingExpression="Summary">
                <Body Context="forecast">
                    @forecast.Summary
                </Body>
            </GridColumnVirtualizeV4>
            <GridColumnVirtualizeV4  Header="City" Index="5" T="@(BlazorTest.Shared.WeatherForecast)" CanOrder="true" OrderingExpression="City.Name">
                <Body Context="forecast">
                    @forecast.City.Name
                </Body>
            </GridColumnVirtualizeV4>

        </Columns>
    </GridVirtualizeV4>